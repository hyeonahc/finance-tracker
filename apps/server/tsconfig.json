{
  "extends": "../../tsconfig.json", // Extend the config options from the root
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "./build",
    "baseUrl": "./",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@routers/*": ["routers/*"],
      "@models/*": ["models/*"],
      "@services/*": ["services/*"],
      "@interfaces/*": ["interfaces/*"],
      "@types/*": ["types/*"]
    }
  },
  "include": ["src/**/*", "src/types"]
}
